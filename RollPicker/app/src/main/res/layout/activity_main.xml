<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="#40000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nalan.rollpicker.tools.DatePicker
        android:id="@+id/date_picker"
        android:layout_marginTop="10dp"
        android:background="#eeeeee"
        app:divider="@drawable/divider_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.nalan.rollpicker.tools.NumberPicker
        android:id="@+id/number_picker"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        app:shadowDrawable="@drawable/shadow_gray"
        app:dividerDrawable="@drawable/divider_gray"
        app:highlightTextColor="#000000"
        app:highlightTextSize="20sp"
        app:textColor="#333333"
        app:textSize="16sp"
        app:itemHeight="40dp"
        app:centerClipHeight="42dp"
        app:tiltDegree="19"
        app:cycle="true"
        app:minValue="1"
        app:maxValue="80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>
